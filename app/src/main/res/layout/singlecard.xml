<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#006400"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0.5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/long_text"
                android:textColor="#fcfcfc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="அறிவிப்பு  : செய்தி" />

            <TextView
                android:id="@+id/card_date_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_marginRight="5dp"

                android:text="20-Feb-1996 10:02:33"
                android:textColor="#ffff02"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/long_text"
                android:layout_marginLeft="5dp"
                android:id="@+id/Descript"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="பார்திபன் , த\/பெ சுப்பிரமணி முடிஞானம் (அஞ்சல்),கருர்"
                android:textColor="#ffff02"
                android:textSize="11dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>